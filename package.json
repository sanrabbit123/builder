{
  "name": "abstractbuilder",
  "version": "1.3.7",
  "description": "EPUB 편집 및 시각화 도구",
  "main": "dist/main.js",
  "type": "module",
  "productName": "Abstract Builder",
  "scripts": {
    "tsc": "tsc",
    "compile": "cross-env NODE_ENV=production tsc && tsc -p ./preconfig.json",
    "devcompile": "cross-env NODE_ENV=development tsc && tsc -p ./preconfig.json",
    "develectron": "cross-env NODE_ENV=development electron .",
    "build": "npm run compile && electron-builder --mac --publish always",
    "build2": "npm run compile && electron-builder --win --publish always",
    "macbuilder": "dotenv -e .env -- npm run build",
    "winbuilder": "dotenv -e .env -- npm run build2",
    "dev": "npm run devcompile && npm run develectron"
  },
  "build": {
    "appId": "com.abstractcloud.abstractbuilder",
    "productName": "Abstract Builder",
    "copyright": "Copyright © 2025 Abstract Cloud",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "dist/renderer/designSource/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "identity": "Changkyu Bae (JZU74V55DB)"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "dist/renderer/designSource/icon.ico",
      "verifyUpdateCodeSignature": true
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main.js"
    },
    "extraResources": [
      {
        "from": "./launcher/jre/${os}-${arch}/",
        "to": "launcher/jre"
      },
      {
        "from": "./launcher/python3/${os}-${arch}/",
        "to": "launcher/python3"
      },
      {
        "from": "./launcher/epub/",
        "to": "launcher/epub"
      },
      {
        "from": "./launcher/py/",
        "to": "launcher/py"
      },
      {
        "from": "./launcher/browser/${os}-${arch}/",
        "to": "launcher/browser"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "sanrabbit123",
      "repo": "builder",
      "private": false,
      "releaseType": "release"
    },
    "asar": true
  },
  "keywords": [],
  "author": "sanrabbit123",
  "license": "ISC",
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.3",
    "@codemirror/lang-python": "^6.1.7",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/language": "^6.11.0",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/search": "^6.5.10",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.36.5",
    "@daisy/ace-core": "1.3.7",
    "axios": "^1.11.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "formdata-node": "^6.0.3",
    "got": "^14.4.9",
    "gsap": "^3.12.5",
    "htmlparser2": "^10.0.0",
    "https-proxy-agent": "^7.0.6",
    "jszip": "^3.10.1",
    "playwright-core": "^1.55.1"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^22.14.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.2",
    "prettier": "^3.5.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.8.3",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}